<!-- include header -->
    <%-include('include/_header')%>

    
<main>
    <script src="/js/index.js"></script>

    <div>
        <i class="fas fa-laptop"></i>
        <a href="/add_product">New Product</a>
    </div>

    <div class="findProduct">
        <label for="name">Name</label>
        <input type="text" name="name" value="" placeholder="The name of the product">

        <button id="findProductBtn">
            Find
        </button>

        <button id="reloadAllProducts">
            Reload all products
        </button>
    </div>

    <p>*You can sort the table by name, price, quantity or rating.</p>

    <form action="/" method="POST">
        <table class="products_table">
            <thead>
                <tr>
                    <th></th>
                    <th>ID</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Description</th>
                    <th>Rating</th>
                    <th>Action</th>
                </tr>
            </thead>
            
            <tbody>
                <% for (var i = 0; i < products.length; i++) { %>
                <tr>
                    <td><input type="checkbox"name="addToList" value=""></td>
                    <td><%= i + 1%></td>
                    <td><%=products[i].name%></td>
                    <td><%=products[i].price%></td>
                    <td><%=products[i].quantity%></td>
                    <td><%=products[i].description%></td>
                    <td><%=products[i].rating%></td>
                    <td>
                        <a href="/update_product?id=<%=products[i]._id%>">
                            <i class="fas fa-pencil-alt"></i>
                        </a>
                        <a class="delete" data-id=<%=products[i]._id%>>
                            <i class="fas fa-trash-alt"></i>
                        </a>
                    </td>
                </tr>
                <% } %>
            </tbody>
        </table>
    </form>

    <div class="lists">
        <div>
            <label for="list">Add new list</label>
            <input id="newListName" type="text" name="list" value="" placeholder="The name of the list">
            <button id="addNewListBtn">Add</button>
        </div>

        <p>Saved lists</p>
        <ol id="savedLists"></ol>
    </div>
</main>

<!-- include footer -->
    <%-include('include/_footer')%>